{
  "name": "markdown-diff-preview",
  "displayName": "Markdown Diff Preview",
  "description": "A beautiful Markdown preview that highlights git diffs inline with green/red highlighting for added/removed lines",
  "version": "1.0.0",
  "publisher": "YOUR_PUBLISHER_NAME",
  "author": {
    "name": "Your Name"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0d1117",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/markdown-diff-preview"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/markdown-diff-preview/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/markdown-diff-preview#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "markdown",
    "preview",
    "git",
    "diff",
    "documentation",
    "git diff",
    "markdown preview",
    "live preview",
    "changes"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownDiffPreview.open",
        "title": "Open Markdown Diff Preview",
        "icon": "$(preview)"
      },
      {
        "command": "markdownDiffPreview.refresh",
        "title": "Refresh Markdown Diff Preview",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdownDiffPreview.open",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "markdownDiffPreview.open",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markdownDiffPreview.open",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown Diff Preview",
      "properties": {
        "markdownDiffPreview.diffBase": {
          "type": "string",
          "default": "HEAD",
          "description": "Git ref to compare against (e.g., HEAD, main, origin/main)"
        },
        "markdownDiffPreview.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in the diff highlighting"
        },
        "markdownDiffPreview.highlightStyle": {
          "type": "string",
          "enum": ["inline", "gutter", "both"],
          "default": "both",
          "description": "How to display diff highlights"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "marked": "^11.1.0"
  }
}
